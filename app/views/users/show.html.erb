
<div>
Welcome <%= @user.email_address %>  
<div><%= link_to "Picture Gallery", user_path, class: "text-red-500" %></div>

<%= @user.images.each do |image| %>
  <%= image_tag(image)%>
<% end %>

<%= form_with model: @user do |form| %>
  <%=fields_for :images, @user.images do |images_form|%>
  <%= images_form.label :featured_image, style: "display: block" %>
  <%= images_form.file_field :featured_image, accept: "/image/*" %>
  <%= images_form.submit "Save pic" %>
  <% end %>
<% end %>

<%= link_to "Edit", user_path, class: "text-blue" %>

<%= link_to "Add", user_path, class: "text-blue" %>

<%= link_to "Delete", 
@user, method: :delete, data: { turbo_confirm: "Are you sure?" } %>
<div>update a new pic here</div>

<%= button_to "Log out", home_index_path, method: :get if authenticated? %>
</div>